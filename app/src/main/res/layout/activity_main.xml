<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    >

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="53dp"
        android:background="@drawable/title_background"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/share"

            android:clickable="true" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="133dp"
            android:background="@drawable/location"
            android:clickable="true" />

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/refresh"
            android:clickable="true" />

        <TextView
            android:id="@+id/cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="北京"
            android:textSize="22sp" />

    </RelativeLayout>


    <com.xietian.shaoxiaweather.sxtq.view.TodayDetail
        android:id="@+id/today_detail"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="#ecf0f1"></com.xietian.shaoxiaweather.sxtq.view.TodayDetail>

    <com.xietian.shaoxiaweather.sxtq.view.FutureDetail
        android:id="@+id/future_detail"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="#ecf0f1"></com.xietian.shaoxiaweather.sxtq.view.FutureDetail>

    <Relativecom.xietian.shaoxiaweather.sxtq.view.SuggestionLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:background="#ecf0f1"></Relativecom.xietian.shaoxiaweather.sxtq.view.SuggestionLayout>


</LinearLayout>
